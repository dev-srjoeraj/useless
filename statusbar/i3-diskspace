
#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) termite -e ranger  ;;
	2) notify-send -u low "ğŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;

esac

case "$location" in
	"/home"* ) icon="ğŸ " ;;
	"/mnt"* ) icon="ğŸ’¾" ;;
	*) icon="ğŸ–¥";;
esac

printf "%s: %s\n" "$icon" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"